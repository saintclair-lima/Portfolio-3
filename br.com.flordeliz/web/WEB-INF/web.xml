<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ControleCliente</servlet-name>
        <servlet-class>br.com.flordeliz.controlador.ControleCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlePedido</servlet-name>
        <servlet-class>br.com.flordeliz.controlador.ControlePedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleLote</servlet-name>
        <servlet-class>br.com.flordeliz.controlador.ControleLote</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>br.com.flordeliz.controlador.NewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleCliente</servlet-name>
        <url-pattern>/cliente/ControleCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlePedido</servlet-name>
        <url-pattern>/pedido/ControlePedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleLote</servlet-name>
        <url-pattern>/lote/ControleLote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
